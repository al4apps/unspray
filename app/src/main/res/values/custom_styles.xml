<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleOnBoarding" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">27sp</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>
    
    <style name="ToolbarActionBar" parent="@style/Widget.Material3.Toolbar.Surface">
        <item name="background">@color/md_theme_dark_primary</item>
    </style>

    <style name="text_name_on_item_photo">
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_like_count_on_item_user_photo">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_name_on_item_user_photo">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_on_photo_info_author_name">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_on_photo_info_username">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

<!--    Collections -->
    <style name="text_on_collection_info_tags">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="mini_caps_on_collection_photo">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="mini_caps_on_collection_info">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="headline_all_caps_on_collection_photo">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="photo_info_text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="download_info_text_on_photo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="collection_info_description" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

<!--    Profile Page -->
    <style name="full_name_on_profile_page">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="username_on_profile_page">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#C4C4C4</item>
    </style>

    <style name="bio_text_on_profile_page">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="contacts_text_on_profile_page">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="placeholder_text_on_profile_page">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

</resources>